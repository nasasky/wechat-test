/* pages/view/view.wxss */
@import "../../wxParse/wxParse.wxss";
page {
  background: #FAFAFA
}
.mbTxing{
   width: 92%; background: #FFF5EC; padding:3% 4%; 
   color: #FF8E28; font-size: 10pt;
}

.mbTxing text{ width: 100%; display: block }

.titles{
   width: 92%;  padding:3% 4%; background: #FFFBF7;
   color: #666; font-size: 11pt; text-align: center; border-bottom: 2rpx dashed #FFE0C4;
}
.titles text{ width: 100%; display: block }

.viewMain{
  width: 100%;
  background: #fff
}

.content{ 
   width: 92%; margin: 30rpx auto 0;
}
.content .wxParse-inline{
  font-size: 14px; color: #333
}
.content .wxParse-img{
  width: 50%; overflow: hidden; border: 2rpx #E1E1E1 solid; padding: 2rpx;
  margin:15rpx auto;
}

/* 关注度 */
.Guanzhu{
 padding:4%; width: 92%
}
.Guanzhu label{
  width: 100%; display: block; text-align: center; color: #C1C1C1; font-size: 12px;
  margin-bottom: 10px
}
.gzList{
  width: 100%; display: block;
}
.gzAuthor{ width: 7%; margin: 2% 2% 0 0; opacity:0.6;}

/* 转发按钮 */
.zhuan{ width: 90%; padding:3% 5% 100px 5%;  background: #FAFAFA;}
.zhuan button{ border-radius: 50px; background: #fff; font-size: 15px; color:#999; border: 2rpx #F4F4F4 solid;}
.zhuan button::after {
  border: 0; 
}
/* 上一组下一组 */
.nextPic{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%; height: 50px; 
}
.nextPic .nextBt{ width: 80%; padding:20rpx 10%; position: absolute; z-index: 2;}
.nextPic .nextBt .z{ float: left; padding: 0 80rpx; background: #fff; border-radius: 50px }
.nextPic .nextBt .y{ float: right; padding: 0 80rpx; background: #fff; border-radius: 50px}
.nextPic .nextBg{
   display: block; width: 100%; height: 50px;  background: #666; z-index: 1; position: absolute; opacity: 0.6
}
button::after{
  border: none
}