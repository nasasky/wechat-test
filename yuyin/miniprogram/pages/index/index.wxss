/**index.wxss**/
.flash{
  width: 100%; height: 280rpx; background: #DDD;
  display: block
}
.slide-image{ width: 100%}
.labels{
  width: 90%; border-bottom: 2rpx #F2F2F2 solid; padding: 25rpx 5%;
  color: #999
}
.indexList{
  width: 100%; height: auto; display: block
}

.indexList view.ul{
  padding: 0 5%;
}
.indexList navigator.li{
  width: 100%; border-bottom: 2rpx #F5F5F5 solid;
  padding: 28rpx 0;
  display: flex;
}
.indexList navigator text{
  flex: 4;
  color: #333;
  overflow: hidden
}
.indexList navigator label{
  flex: 1;
  color: #999;
  text-align: right
}

.loading{
  padding: 80rpx 0; color: #999;
}
.loadingTxt{
  width: 100%; text-align: center; color: #999
}

.displayNo{ color: #D0D0D0; padding: 30rpx 0 40rpx 0; width: 100%; text-align: center; font-size: 10pt}