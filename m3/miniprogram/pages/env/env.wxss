/* env.wxss */
@import "../index/index.wxss";
.block-section {
  background-color: white;
  width: 100%;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.section-title {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  border-bottom: 2rpx solid #dddcdc;
  justify-content: space-between;
  margin-left: 10px;
  margin-right: 10px;
}

.section-title-left {
  font-size: 15pt;
  font-weight: bold;
}

.section-title-right {
  font-size: 10pt;
}

.section-body {
  margin-right: 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.canvas {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.canvas-chart {
  height: 240rpx;
  width: 240rpx;
  text-align: center;
}

.canvas-chart-name {
  font-size: 16px;
}

.canvas-line-chart {
  height: 450rpx;
  width: 640rpx;
}

.equipment-area {
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 2rpx solid #dddcdc;
  padding:20rpx;
}

.equipment-area-icon {
  text-align: center;
}

.equipment-area-text {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-left:20rpx;
}

.equipment-area-text-title {
  font-size:12pt;
  margin-bottom: 10rpx;
}

.equipment-area-text-info {
  font-size:30rpx;
  color:#aaa;
}

.equipment-scroll-view {
  max-height: 350px;
}