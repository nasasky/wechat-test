.container {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.section-left {
  background-color: white;
  width: 150rpx;
  height: 100%;
  float: left;
}

.province {
  text-align: center;
  margin: 20rpx 0rpx;
  font-size: 13px;
}

.section-center {
  width: 300rpx;
  height: 100%;
  float: left;
  border-right: 1rpx solid lightgray;
  box-sizing: border-box;
}

.section-right {
  width: 300rpx;
  height: 100%;
  float: left;
}

.select-text {
  margin: 20rpx 0rpx;
  text-align: center;
  font-size: 13px;
  color: #e05b56;
}

.select-item {
  background-color: white;
  text-align: center;
  display: inline-block;
  margin: 10rpx 20rpx; 
  padding: 5rpx 10rpx; 
  border-radius: 10rpx;
  font-size: 12px;
}